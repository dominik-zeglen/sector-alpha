{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "es2018",
    "module": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "strictNullChecks": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@core/*": ["./core/*"],
      "@devtools/*": ["./devtools/*"],
      "@kit/*": ["./kit/*"],
      "@ui/*": ["./ui/*"]
    }
  },
  "exclude": ["**/*.test.*"]
}
