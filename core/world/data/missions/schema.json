{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for mission dialogues",
  "type": "object",
  "properties": {
    "Start": {
      "type": "string"
    },
    "Actors": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "lines": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string"
                },
                "next": {
                  "type": "string"
                },
                "set": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "flags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "required": ["text"]
            }
          }
        },
        "required": ["lines"]
      }
    }
  },
  "required": ["Start", "Actors"]
}
